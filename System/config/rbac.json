      "displayName": "Admin",
      "immutable": true,
      "permissions": ["*"]
    },
    "Store Employee": {
      "displayName": "Store Employee",
      "immutable": true,
      "permissions": [
        "inventory.view",
        "inventory.add",
        "inventory.edit",
        "inventory.delete",

        "products.view",
        "products.add",
        "products.edit",
        "products.delete",

        "orders.view",
        "orders.edit",
        "orders.accept",
        "orders.cancel",

        "deliveries.view",
        "deliveries.assign",
        "deliveries.update_status",

        "reports.view",
        "notifications.view_admin"
      ]
    },
    "Delivery Driver": {
      "displayName": "Delivery Driver",
